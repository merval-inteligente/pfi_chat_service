# Environment Variables para Chat Service

# FastAPI Configuration
APP_NAME=Chat Service
DEBUG=True
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8081

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000

# Main Backend Configuration
MAIN_BACKEND_URL=http://192.168.0.17:8080
MAIN_BACKEND_TIMEOUT=30

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10
REDIS_TIMEOUT=5

# PostgreSQL Configuration (alternative to MongoDB)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/chat_db

# MongoDB Configuration (alternative to PostgreSQL)
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=chat_db

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=JSON

# CORS Configuration
CORS_ORIGINS=*
CORS_CREDENTIALS=true
CORS_METHODS=*
CORS_HEADERS=*

# WebSocket Configuration
WS_MAX_CONNECTIONS=1000
WS_HEARTBEAT_INTERVAL=30

# Chat Configuration
MAX_CONTEXT_MESSAGES=20
MAX_MESSAGE_LENGTH=2000
SESSION_TIMEOUT=3600
